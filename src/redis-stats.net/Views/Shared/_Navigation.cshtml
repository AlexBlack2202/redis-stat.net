@using Microsoft.Ajax.Utilities
@model redis_stat.net.ViewModels.NavigationViewModel
@functions {
    public static bool Selected(string a, string b)
    {
        return a == b;
    }
}
<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="brand" href="/">redis-stat.net</a>
            @{
                var selected = Model.Selected;
                var defaultSelected = selected.IsNullOrWhiteSpace();
            }
            @if (Model.Hosts.Count() > 1)
            {
                <ul class="nav">
                    <li>
                        <select id="hostlist" class="select2 input-default">
                            <option value="/" selected="@defaultSelected">All instances</option>
                            @foreach (var host in Model.Hosts)
                            {
                                <option value="@host.Value" selected="@Selected(selected, host.Text)" >@host.Text</option>
                            }
                        </select>
                    </li>
                </ul>
            }
        </div>
    </div>
</div>